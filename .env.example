# Copy this to .env and fill sensitive values. Do NOT commit .env to VCS.
# Example env for local runs
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000
FCM_KEY=
# Web Push VAPID public key (from Firebase project settings â†’ Cloud Messaging)
FCM_VAPID_PUBLIC_KEY=
CROWD_THRESHOLD=3
# Optional JSON per-camera threshold map, escape quotes in shell: '{"CAM01":1}'
CROWD_THRESHOLD_MAP={}
FIREBASE_CREDENTIALS_PATH=

# Firebase project used for verifying ID tokens on backend
FIREBASE_PROJECT_ID=

# Enforce auth-only token registration and admin-only alert APIs (default 1)
AUTH_STRICT=1

# Optional admin configuration (comma-separated)
# Use Firebase UIDs if you authenticate admins with Firebase (recommended)
ADMIN_FIREBASE_UIDS=
# Or fallback to internal Personnel user IDs (numeric)
ADMIN_USER_IDS=

# Secret for HMAC signing of snapshot URLs (set to a strong random string in prod)
SECRET_KEY=
