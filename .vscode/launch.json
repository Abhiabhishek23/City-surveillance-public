{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: backend/main.py (reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["main:app", "--host", "127.0.0.1", "--port", "8000", "--reload"],
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Run: ./run.sh start",
      "type": "debugpy",
      "request": "launch",
      "program": "${env:SHELL}",
      "args": ["-lc", "cd '${workspaceFolder}' && ./run.sh start && ./run.sh open"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}