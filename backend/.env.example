# FastAPI/Backend example env (safe defaults for local dev)
ENV=development
DEBUG=true
PORT=8000
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8000

# Auth/dev shortcuts
ALLOW_DEV_NO_AUTH=1
ADMIN_BYPASS_SECRET=let-me-in

# Redis (optional; falls back to in-memory if not running)
REDIS_HOST=localhost

# Firebase push (optional)
# FIREBASE_CREDENTIALS_PATH=/absolute/path/to/service-account.json
# FCM_SERVER_KEY=your-legacy-http-key
# VAPID_PUBLIC_KEY=your-public
# VAPID_PRIVATE_KEY=your-private

# Snapshot/Uploads
UPLOAD_DIR=backend_uploads
VIOLATION_CONFIG_PATH=./config/violation_thresholds.json

# Crowd thresholds
CROWD_THRESHOLD=3
# CROWD_THRESHOLD_MAP={"CAM01":5, "CAM02":2}# Backend environment configuration example

# General
ENV=development
DEBUG=true

# Uvicorn host/port (optional; runner script uses 127.0.0.1:8000)
HOST=127.0.0.1
PORT=8000

# Database (SQLite default)
DATABASE_URL=sqlite+aiosqlite:///./alerts.db

# Firebase (optional but recommended for push notifications)
# Provide either Service Account JSON path or set per-field values (do NOT commit real keys)
# If you use a service account file, place it outside the repo or ensure it's gitignored.
FIREBASE_CREDENTIALS_FILE=
FCM_SERVER_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Security
JWT_SECRET=dev-secret-change-me
JWT_ALGORITHM=HS256

# Ingestion / Processing
FPS_TARGET=5
MAX_WORKERS=2

# Static mounts
ASSETS_DIR=../Assets
CLIENT_UI_DIR=../Frontend
ADMIN_DIR=../dashboard/build

# Feature flags
ENABLE_CLIP=true
ENABLE_YOLO=true
ALLOW_DEV_NO_AUTH=true
