rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated users can read/write their own user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Alerts collection: only server (with security rules via App Check or IAM) should write.
    match /alerts/{alertId} {
      // allow read to authenticated users; writes are restricted to server via Admin SDK
      allow read: if request.auth != null;
      allow write: if false; // deny direct writes from client
    }

    // Default: deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
